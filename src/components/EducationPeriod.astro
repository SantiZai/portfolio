---
const { period, title, description } = Astro.props;
---

<li class="container-each-education mb-10 ms-4">
  <div
    class="pin absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <time
    class="mb-1 cursor-default text-sm font-normal leading-none text-gray-400 dark:text-gray-500"
    >{period}</time
  >
  <h3
    class="text-lg cursor-default font-semibold text-gray-900 dark:text-white"
  >
    {title}
  </h3>
  <p class="text-sm font-normal text-gray-500 dark:text-gray-400">
    {description}
  </p>
</li>

<style>
  .container-each-education:hover {
    .pin {
      background-color: #a9cbdf;
    }
  }

  .pin {
    transition: all 0.3s;
  }
</style>
